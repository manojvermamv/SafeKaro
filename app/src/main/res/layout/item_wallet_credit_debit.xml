<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_6sdp"
    android:layout_marginTop="@dimen/_6sdp"
    android:layout_marginEnd="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    android:background="@drawable/bg_dash_view">

    <RelativeLayout
        android:id="@+id/layInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_6sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_1sdp"
            android:fontFamily="@font/font_family"
            android:maxLines="1"
            android:textColor="?android:textColorPrimary"
            android:textFontWeight="600"
            android:textSize="@dimen/_9ssp"
            tools:text="11-24-2024" />

        <LinearLayout
            android:id="@+id/layParticular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toStartOf="@+id/tvDate"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/font_family"
                android:maxLines="1"
                android:text="Particular: "
                android:textColor="?android:textColorPrimary"
                android:textFontWeight="600"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/tvParticular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/font_family"
                android:maxLines="1"
                android:textColor="?android:textColorPrimary"
                android:textFontWeight="700"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layRemark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layParticular"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/font_family"
                android:maxLines="1"
                android:text="Remark: "
                android:textColor="?android:textColorPrimary"
                android:textFontWeight="600"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/tvRemark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/font_family"
                android:maxLines="1"
                android:textColor="?android:textColorPrimary"
                android:textFontWeight="700"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layTransactionsCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layRemark"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/font_family"
                android:maxLines="1"
                android:text="Transactions Code: "
                android:textColor="?android:textColorPrimary"
                android:textFontWeight="600"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/tvTransactionsCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/font_family"
                android:maxLines="1"
                android:textColor="?android:textColorPrimary"
                android:textFontWeight="700"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layTransactionsCode"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_1sdp">

            <LinearLayout
                android:id="@+id/layBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_family"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Balance:  "
                    android:textColor="?android:textColorPrimary"
                    android:textFontWeight="600"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/tvBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_family"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="?android:textColorPrimary"
                    android:textFontWeight="700"
                    android:textSize="@dimen/_10ssp"
                    tools:text="₹ 10,445,356" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvCredit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layBalance"
                android:layout_marginTop="@dimen/_1sdp"
                android:fontFamily="@font/font_family"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@android:color/holo_green_dark"
                android:textFontWeight="700"
                android:textSize="@dimen/_10ssp"
                tools:text="Credit:  ₹ 10,438,269" />

            <TextView
                android:id="@+id/tvDebit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCredit"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/font_family"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@android:color/holo_red_dark"
                android:textFontWeight="700"
                android:textSize="@dimen/_10ssp"
                tools:text="Debit:  ₹ 7,087" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@+id/layInfo">

        <View
            android:id="@+id/viewDivder"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey" />

        <ImageView
            android:id="@+id/btnView"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_below="@+id/viewDivder"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/_2sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_eye"
            android:textFontWeight="600" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>